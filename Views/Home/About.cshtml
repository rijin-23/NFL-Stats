<style>
    .api-section {
        padding: 50px 0;
        background-color: #f8f9fa;
        margin-top: 50px;
    }

    .endpoints-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
    }

    .endpoint-card {
        background-color: white;
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease;
    }

    .endpoint-card:hover {
        transform: translateY(-5px);
    }

    .endpoint-card h3 {
        color: #013369;
        font-size: 1.5rem;
        margin-bottom: 15px;
        font-weight: 600;
    }

    .endpoint-url {
        background-color: #013369;
        color: white;
        padding: 8px 15px;
        border-radius: 6px;
        font-family: monospace;
        font-size: 0.9rem;
        margin-bottom: 15px;
    }

    .endpoint-details {
        color: #2d3748;
    }

    .endpoint-details ul {
        list-style-type: none;
        padding-left: 0;
        margin-bottom: 15px;
    }

    .endpoint-details li {
        padding: 5px 0;
        color: #4a5568;
    }

    .endpoint-details strong {
        color: #2d3748;
    }

    h2 {
        color: #013369;
        font-weight: 600;
        margin-bottom: 30px;
    }
    .about-container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .about-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .about-header h1 {
        color: #013369;
        font-size: 2.5rem;
        margin-bottom: 15px;
    }

    .team-member {
        display: flex;
        align-items: center;
        margin-bottom: 50px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease;
    }

    .team-member:hover {
        transform: translateY(-5px);
    }

    .member-image {
        width: 300px;
        height: 300px;
        object-fit: cover;
    }

    .member-info {
        padding: 30px;
        flex: 1;
    }

    .member-name {
        color: #013369;
        font-size: 1.8rem;
        margin-bottom: 10px;
    }

    .member-title {
        color: #D50A0A;
        font-size: 1.1rem;
        margin-bottom: 20px;
        font-weight: 500;
    }

    .member-description {
        color: #4a5568;
        line-height: 1.6;
        margin-bottom: 20px;
    }

    .social-links {
        display: flex;
        gap: 15px;
    }

    .social-link {
        color: #013369;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .social-link:hover {
        color: #D50A0A;
    }

    @@media (max-width: 768px) {
        .team-member {
            flex-direction: column;
        }

        .member-image {
            width: 100%;
            height: 300px;
        }

        .member-info {
            padding: 20px;
        }
    }
</style>


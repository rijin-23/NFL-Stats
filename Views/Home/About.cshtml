@{
    ViewData["Title"] = "About Us";
}

<style>
    .about-container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .about-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .about-header h1 {
        color: #013369;
        font-size: 2.5rem;
        margin-bottom: 15px;
    }

    .team-member {
        display: flex;
        align-items: center;
        margin-bottom: 50px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease;
    }

    .team-member:hover {
        transform: translateY(-5px);
    }

    .member-image {
        width: 300px;
        height: 300px;
        object-fit: cover;
    }

    .member-info {
        padding: 30px;
        flex: 1;
    }

    .member-name {
        color: #013369;
        font-size: 1.8rem;
        margin-bottom: 10px;
    }

    .member-title {
        color: #D50A0A;
        font-size: 1.1rem;
        margin-bottom: 20px;
        font-weight: 500;
    }

    .member-description {
        color: #4a5568;
        line-height: 1.6;
        margin-bottom: 20px;
    }

    .social-links {
        display: flex;
        gap: 15px;
    }

    .social-link {
        color: #013369;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .social-link:hover {
        color: #D50A0A;
    }

    @@media (max-width: 768px) {
        .team-member {
            flex-direction: column;
        }

        .member-image {
            width: 100%;
            height: 300px;
        }

        .member-info {
            padding: 20px;
        }
    }
</style>

